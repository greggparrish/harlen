!!!
%html
  %head
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'description', :content => "" }
    %meta{ :name => 'viewport', :content => 'width=device-width' }
    %meta{:charset => "utf-8"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= full_title(yield(:title)).html_safe
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'application', '//fonts.googleapis.com/css?family=Work+Sans'
    = stylesheet_link_tag 'application', '//fonts.googleapis.com/css?family=Gentium+Basic'
    = stylesheet_link_tag 'application', '//fonts.googleapis.com/css?family=Raleway:100,400'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = auto_discovery_link_tag :rss, stories_url(format: :rss)
  %body
    = render 'shared/nav'
    = render 'shared/header'
    = yield
    = render 'shared/footer'
