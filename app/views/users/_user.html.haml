.container
  .col-xs-12
    %ul.list-inline
      %li= link_to user.email, user
      %li
        = form_for(user) do |f|
          = f.select(:role, User.roles.keys.map {|role| [role.titleize,role]})
          = f.submit 'Change Role', :class => 'button-xs'
      %li= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button-xs') unless user == current_user


